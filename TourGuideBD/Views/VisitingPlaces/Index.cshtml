@model IEnumerable<TourGuideBD.Models.VisitingPlace>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PlaceName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DistricId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpazilaId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TouristEntryTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EntryFee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactInfo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HowToGo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EntryDate)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Division)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaceType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistricId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpazilaId)
            </td>
            <td>
                <img src="data:image/jpeg;base64, @Convert.ToBase64String(item.Image)" class="img-responsive" width="50px" height="50px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TouristEntryTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HowToGo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Division.DivisionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceType.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlaceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlaceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlaceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
