<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TourGuideBD</title>

    <environment include="Development">

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
        <link href="~/Animate_CSS/animate.min.css" rel="stylesheet"/>
        <link href="~/css/Scroll-bar.css" rel="stylesheet"/>
        <link rel="stylesheet" href="~/css/Layout.css"/>
        <link href="~/css/Ads-and-space.css" rel="stylesheet"/>
        <link href="~/FontAwsome/css/all.min.css" rel="stylesheet"/>
        <link href="~/css/BootstrapHowver.css" rel="stylesheet"/>
        <link href="~/css/Index.css" rel="stylesheet"/>

    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="TopBar">
            <p>
                <a id="WebsiteLinkid">info@@touristplaceinBangladesh</a> <a id="Englishid" class="btn btn-default" href="/Home/Contact">English</a>
                <a id="Banglaid" class="btn btn-default" href="/Home/About">বাংলা</a>
            </p>
        </div>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="margin-top: 25px;">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img src="~/images/Tourist-Place-in-Bangladesh-logo.png" class="img-responsive"
                         id="logo-one-id" />
                </a>
            </div>
            <div class="navbar-collapse collapse" id="navbar-nav-list-iteam-id">
                <ul class="nav navbar-nav">

                    <li><a asp-area="" asp-controller="Home" asp-action="Index">HOME</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">ABOUT US</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="">TOURIST SPOTS</a></li>
                    <li><a onclick="window.open('/TourPhoto/TourPhotoIndex')">TOUR PHOTOS</a></li>
                    <li><a data-toggle="modal" data-target="#myModal">DISTRIC BASED</a></li>
                    <li><a asp-area="" asp-controller="" asp-action="">ADD PLACE</a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
                @*<ul class="nav navbar-nav navbar-right">
                        <li id="sign-up-id"><a class="btn btn-default">SIGN UP</a></li>
                        <li id="sign-in-id"><a class="btn btn-default">SIGN IN</a></li>
                    </ul>*@
            </div>
        </div>
    </nav>

    <div class="body-content" style="margin-top: 130px;">
        @RenderBody()

        <footer>
            <section id="footer-id">
                <div class="top-footer">
                    <div class="row">
                        <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12" id="footer-logo-column-id">
                            <img src="~/images/Tourist-Place-in-Bangladesh-logo-footer-check.png" class="img-responsive" /> <br />
                            <p>TourTodayBD is the largest directory of Bangladesh tour and travel. We have tried to list out all tourist spots of Bangladesh. It's will help you to make trip plane based on spots description, rating, photos as well videos.</p> <br />
                            <div class="social-media-font-awsome">
                                <i class="fab fa-facebook-f"></i> &nbsp;
                                <i class="fab fa-twitter"></i> &nbsp;
                                <i class="fab fa-google-plus-g"></i> &nbsp;
                                <i class="fab fa-pinterest"></i> &nbsp;
                                <i class="fab fa-youtube"></i>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12" id="footer-column-id">
                            <h2><b><span style="color: #19A1D3">Q</span><span style="color: #FFFFFF">UICK LINKS</span></b></h2>
                            <a>Bangladesh Travel Blogs</a><br />
                            <a>Bangladesh Travel Tips</a><br />
                            <a>Hotel in Bangladesh</a><br />
                            <a>Travel Accessories Shop</a><br />
                        </div>
                        <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12" id="footer-column-id">
                            <h2><b><span style="color: #19A1D3">T</span><span style="color: #FFFFFF">RAVEL STYLE</span></b></h2>
                            <a>Entertainment Center</a><br />
                            <a>Gardens and Forest</a><br />
                            <a>Hill Tracts Tour</a><br />
                            <a>Historical Place</a><br />
                            <a>Lake, River and Beach </a><br />
                            <a>Modern Architecture</a><br />

                        </div>
                        <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12" id="footer-column-id">
                            <h2><b><span style="color: #19A1D3">D</span><span style="color: #FFFFFF">IVISION BASED TRAVEL</span></b></h2>

                            <a>Tourist Spots in Dhaka</a><br />
                            <a>Tourist Spots in Chittagong</a><br />
                            <a>Hill Tracts Tour</a><br />
                            <a>Historical Place</a><br />
                            <a>Tourist Spots in Rajshahi</a><br />
                            <a>Tourist Spot in Khulna</a><br />
                            <a>Tourist Spots in Barisal</a><br />
                            <a>Tourist Spots in Rangpur</a><br />
                            <a>Tourist Spot in Sylhet</a><br />
                            <a>Tourist Spot in Mymensingh</a><br />
                        </div>
                    </div>
                </div>
                <div class="bottom-fotter">
                    <p>copyright &copy; @DateTime.Now.Year - & Developed by Saklain,Tinni,Faria</p>

                    @*<a href="" data-toggle="tooltip" data-placement="top" title="Click here to visit Developer">@@</a>*@

                </div>
            </section>
        </footer>
        <a href="javascript:" id="return-to-top"><i class="fas fa-angle-up"></i></a>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/Scroll-bar.js"></script>
    <script src="~/js/DropdownAutoDataLoad.js"></script>
    <script src="~/Animate_CSS/gulpfile.js"></script>
    <script src="~/js/Index.js"></script>

    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>

    @RenderSection("Scripts", required: false)


</body>
</html>
